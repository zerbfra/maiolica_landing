<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta title="maiolica.studio"/>
		<meta name="viewport" content="width=device-width" />

		<style>
			@font-face {
				font-family: NeueMontreal-Regular;
				src: url(/assets/fonts/NeueMontreal-Regular.otf);
			}
			@font-face {
				font-family: RaptorV3-Regular;
				src: url(/assets/fonts/RaptorV3Premium-Regular.otf);
			}

			html,body {
				margin:0;
				padding:0;
				width: 100%;
				height: 100%;
			}

			body {
				background-color: #1C1D24;
				color: #FFFFFF;
				font-family: "NeueMontreal-Regular";
				display: flex;
				flex-direction: column;
				flex-grow: 1;
			}

			.container {
				display: flex;
				flex-direction: column;
				height: 100%;
				justify-content: center;
				align-items: center;
			}

			.header {
				display: flex;
				width: 100%;
				justify-content: space-between;
				margin-top: 40px;
			}

			.logo {
				width: 200px;
				margin-left: 40px;
			}

			.slogan {
				margin-bottom: 3rem;
				width: 60%;
				font-weight: 400;
				font-size: 140px;
				font-family: "RaptorV3-Regular";
				font-style: normal;
				font-size: 140px;
				line-height: 91%;

				text-align: center;
				letter-spacing: -0.08em;

			}

			.digital {
				color: #F8BA29;
			}

			.contactBtn {
				color: #1C1D24;
				background-color: #F8BA29;
				cursor: pointer;
				margin-top: 2em;
				padding: 10px 20px 10px 20px;
				border-radius: 100px;
			}

		</style>
	</head>

	<body>
		<div class="header">
			<img src={Astro.resolve('/assets/logo_white.svg')} class="logo"/>
		</div>
		<div class="container">
			<span class="slogan">Il nuovo modo di essere <span class="digital">digital</span>.</span>
			<div class="contactBtn" onclick="location.href='mailto:ciao@maiolica.studio';">contattaci</div>
		</div>
	</body>
</html>
